@model Banking.Shared.Models.LogInModel

<form asp-action="LogIn" asp-controller="Account" method="post" asp-route-returnurl="@ViewBag.ReturnUrl" id="login-replace">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="CNP" class="form-control" placeholder="CNP" />
        <span asp-validation-for="CNP" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="password" asp-for="PIN" class="form-control" placeholder="PIN" />
        <span asp-validation-for="PIN" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">LogIn</button>
</form>
